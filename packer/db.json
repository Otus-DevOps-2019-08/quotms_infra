        "project_id_var": null,
        "source_image_family_var": null,
        "machine_type_var": "f1-micro",
	"disk_size_var": "10"
        },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id_var`}}",
